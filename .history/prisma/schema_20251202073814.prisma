generator client {
  provider = "prisma-client"
}

datasource db {
  provider = "mysql"
}

model order_detail {
  id        Int      @id @default(autoincrement())
  order_id  Int
  coffee_id Int
  quantity  Int
  price     Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model order_list {
  id            Int      @id @default(autoincrement())
  customer_name String
  order_type    String
  order_date    String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model co

model users {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  password  String
  role      Role
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  ADMIN
  USER
  CASHIER
}
